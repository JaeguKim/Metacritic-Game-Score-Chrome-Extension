{
  "name": "Metacritic Game Score Info Extension",
  "version": "0.0.0.1",
  "description": "This extension provides videogame's score in Metacritic website.",
  "permissions": ["activeTab", "declarativeContent", "storage","https://chicken-coop.p.rapidapi.com/"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/gameScore16.png",
      "32": "images/gameScore32.png",
      "48": "images/gameScore48.png",
      "128": "images/gameScore128.png"
    }
  },
  "icons": {
    "16": "images/gameScore16.png",
    "32": "images/gameScore32.png",
    "48": "images/gameScore48.png",
    "128": "images/gameScore128.png"
  },
  "manifest_version": 2
}
